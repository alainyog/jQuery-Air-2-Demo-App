<header>
  <h1>Select a Flight</h1>
</header>

<section id="tabs">
  <ul>
    <% @dates.each do |d| %>
      <li><a href="#<%= d.strftime("%Y-%m-%d") %>" data-flights="<%= Flight.where(depart: d.beginning_of_day..d.end_of_day).count %>"><%= d.strftime("%b %d") %></a></li>
    <% end %>
  </ul>

  <div id="2012-09-27">Loading Sep 27</div>
  <div id="2012-09-28">Loading Sep 28</div>
  <div id="2012-09-29">Loading Sep 29</div>
  <div id="2012-09-30">Loading Sep 30</div>
  <div id="2012-10-01">Loading Oct 1</div>
  
  <div id="error">
    <h2>Whoops, unable to pull flights.</h2> 
    Sorry about that, <a href='#'>Click here</a> to try again.
  </div>
  
  <div id="loading">
    <h2>Just a minute while we pull up your flight</h2> 
    <%= image_tag 'spinner.gif' %>
  </div>
</section>

<style>
#confirm {
  margin:20px auto;
  width: 430px;
  background-color: #ccc;
  border: 1px solid black;
}
#flight_review {
  background-color: #bbb;
  width: 250px;
  margin: 10px;
  float: left;
}
#calendar {
  width: 30px;
  font-weight: bold;
  font-size: 1.5em;
  margin:10px;
  float:left;
}
#flightNum {
  margin: 15px, 5px;
}
#departure {
  margin: 5px;
  float:left;
}
#to {
  margin: 10px;
  float: left; 
}
#arrival {
  margin: 5px;
  float: left; 
}

#cost {
  clear:left;
}

#login {
  margin-top: 40px;
  width: 160px;
  background-color: #EEE;
  float:left;
}

form#confirm_purchase {
  margin-left: 200px;
}
</style>

