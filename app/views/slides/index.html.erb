<header>
  <h1>Select a Flight</h1>
</header>

<section id="tabs">
  <ul>
    <% @dates.each do |d| %>
      <li><a href="#<%= d.strftime("%Y-%m-%d") %>" data-flights="<%= Flight.where(depart: d.beginning_of_day..d.end_of_day).count %>"><%= d.strftime("%b %d") %></a></li>
    <% end %>
  </ul>

  <div id="2012-09-27">Loading Sep 27</div>
  <div id="2012-09-28">Loading Sep 28</div>
  <div id="2012-09-29">Loading Sep 29</div>
  <div id="2012-09-30">Loading Sep 30</div>
  <div id="2012-10-01">Loading Oct 1</div>
  
  <div id="error">
    <h2>Whoops, unable to pull flights.</h2> 
    <p>Sorry about that, <a href='#'>Click here</a> to try again.<p>
  </div>
  
  <div id="loading">
    <h2>Just a minute while we pull up your flight</h2>
  </div>
</section>

<section id="confirm">
  <div class="flight-review">
    <div class="flight-info">
      <h2>Flight #2344</h2>
      <h3><b>Sep</b>23</h3>
    
      <span class="flight-depart">
        <strong>Orlando, FL</strong>
        3:40 PM
      </span>
      <span class="arrow">To</span>
      <span class="flight-arrive">
        <strong>New York, NY</strong>
        5:30 PM
      </span>
    </div>
    
    <table>
      <tr>
        <th>Base Price:</th>
        <td>$432</td>
      </tr>
      <tr>
        <th>Govt. Taxes and Fees:</th>
        <td>$123</td>
      </tr>
      <tr class="total">
        <th>Trip Total:</th>
        <td>$555</td>
      </tr>
    </table>
  </div>

  <form class="session">
    <h4>Please login to book flight:</h4>
    <p>
      <label>Email:</label>
      <input type='text' />
    </p>
    <p>
      <label>Password:</label>
      <input type='text' />
    </p>
    <p>
      <input type='submit' value="Login" />
    </p>
  </form>
  
  <form class="confirm-purchase">
    <input type="submit" value="Confirm Purchase &amp; Select Seats" />
  </form>
</section>

