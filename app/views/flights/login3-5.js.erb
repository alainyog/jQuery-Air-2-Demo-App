$('#login').queue(function(next) {
  $(this).html("<%= escape_javascript(render 'welcome') %>").fadeIn('slow', function() {
    $('#confirm .confirm-purchase').slideDown(500, "linear");
    $("#confirm tr.total td, #confirm tr.total th").css({'background-color': '#2C1F11', 'opacity':'0.5'})
    .animate({ opacity: '1', height: '30'}, 'slow', "linear");
  });
  next();
});